<% layout('/layouts/boilerplate') -%>

<div class="row">
  <div class="col-6 offset-3">
    <br />
    <h3 class="offset-2">LogIn for WonderLust</h3>
    <br />
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Enter Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Enter password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter password.</div>
      </div>

      <button class="btn add-btn btn-success">login</button>
    </form>
  </div>
</div>
