<% layout("/layouts/boilerplate") -%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    /* align-items: center; */
   
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }

  .taxes{
    display: none;
  }

  .tax-toggle{
    border: 1px solid rgb(162, 157, 157);
    border-radius: 1rem;
    height: 2.5rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    margin-left: 2rem;
    font-size: .8rem;
    
  
  }
</style>
<div id="filters" class="mt-3">
  <div class="filter">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mug-hot"></i>
    <p>Bed & Breakfast</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-umbrella-beach"></i>
    <p>Beach</p>
  </div>
  <div class="filter">
    <i class="fa-regular fa-snowflake"></i>
    <p>Arctic</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mountain"></i>
    <p>Caves</p>
  </div>
  <div class="filter">
    <i class="fa-brands fa-fort-awesome"></i>
    <p>Castles</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-building"></i>
    <p>Iconic cities</p>
  </div>
  <div class="filter ">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Amazing pools</p>
  </div>
  <div class="tax-toggle">

    <div  class="form-check form-switch form-check-reverse ">
      <input
      class="form-check-input"
      type="checkbox"
      id="flexSwitchCheckReverse"
      />
      <label class="form-check-label" for="flexSwitchCheckReverse"
      >Display tax rates</label
      >
    </div>
  </div>

  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
    <% for (let element of listing) {%>
    <a href="/listings/<%= element._id %>" class="linking-list">
      <div class="card listings-card col">
        <img
          src="<%=element.image.url%>"
          class="card-img-top"
          alt="image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b> <%= element.title %> </b><br />
            &#8377; <%= element.price %> <i class="taxes">+ 18% Gst</i> <br />
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <script>
    let element = document.getElementById("flexSwitchCheckReverse");
    element.addEventListener("click", () => {
      let taxelement=document.getElementsByClassName("taxes");
      for(let ele of taxelement){
        if(ele.style.display=="inline")
        ele.style.display="none";
      else ele.style.display="inline";
      }
    });
  </script>
</div>
